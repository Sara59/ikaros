<?xml version="1.0"?>

<group title="FaceMatrix Example">
	
		<module
			class = "InputVideo"
			name = "InputVideo"
			
		/>

		<module
			class = "FaceMatrix"
			name = "FaceMatrix"
		/>

		
	        <module
	            class = "MPIFaceDetector"
	            name = "FaceDetector"
	        />
        

        <connection sourcemodule="InputVideo" source="INTENSITY" targetmodule="FaceDetector" target="INPUT" />	
        <connection sourcemodule = "FaceDetector" source = "FACES" targetmodule = "FaceMatrix" target = "FACE" />


		<view name="View">
			
			<object
				class   ="Image"
 		                title   = "Output"
				type	= "gray"
				module  = "FaceDetector"
				source  = "OUTPUT"
				x="0" y="0"
				w="3" h="2"
				min = "0"
				max = "1"
			/>

			<object
                		class   = "Table"
                		module  = "FaceMatrix"
                		source  = "OUTPUTX"
                		title = "X value"
                		x="4" y="0"
                		w="2" h="1"
                		font_size = "48"
                		decimals = "0"
 			/>

			<object
                		class   = "Table"
                		module  = "FaceMatrix"
                		source  = "OUTPUTY"
                		title = "Y value"
                		x="6" y="0"
                		w="2" h="1"
                		font_size = "48"
                		decimals = "0"
 			/>
			

		</view>

</group>
 
